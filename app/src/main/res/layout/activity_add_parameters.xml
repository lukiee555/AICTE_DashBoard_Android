<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:id="@+id/ll"
    tools:context="com.example.lokeshsoni.dashboard.activities.AddParametersActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:background="#ECEFF1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_InitiativeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/initiative_name"
            android:textSize="50sp"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_parameters"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_parameter"
        />
    <Button
        android:id="@+id/bt_AddParameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/add"
        android:layout_gravity="bottom|end"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_parameter"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:text="@string/done"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        />

</LinearLayout>
